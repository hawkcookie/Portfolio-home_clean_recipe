<div class="container">
  <h1>トップページ</h1>
    <div class="row">
      <% @posts each do |posts| %>
        <%= link_to post_path(posts.id) do %>
          <span><%= image_tag posts.image, size: "250×200" %></span>
        <% end %>
        <%= posts.profile_image %>
        <%= posts.user.name %>
        <%= posts.title %>
        <%= posts.like %>
        <%= posts.category %>
        <%= posts.introduction %>
      <% end %>
    </div>
</div>

