<div class="container">
  <div class='flash-message'>
    <%= flash[:notice] %>
  </div>
  <h4>ユーザ情報編集</h4>
  <div class="row justify-content-center">
    <%= form_with model: @user, url: user_path  do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="col-lg-12 user-info">
        ニックネーム
      </div>
      <div class="col-lg-12 user-info">
        <%= f.text_field :user_name ,class: "form-expand" %>
      </div>
      <div class="col-lg-12 user-info">
        メールアドレス
      </div>
      <div class="col-lg-12 user-info">
        <%= f.text_field :email ,class: "form-expand" %>
      </div>
      <div class="col-lg-12 user-info">
        プロフィール画像
      </div>
      <div class="col-lg-12 user-info">
        <%= f.file_field :profile_image ,class: "form-expand" %>
      </div>
      <div class="col-lg-12 user-info">
        プロフィール
      </div>
      <div class="col-lg-12 user-info">
        <%= f.text_area :self_introduction ,class: "text-area" %>
      </div>
      <div class="row justify-content-between">
        <div class="col-lg-3 user-info">
          <%= f.submit "更新", class: "btn btn-success" %>
        </div>
        <div class="col-lg-3 user-info">
          <%= link_to "退会する", users_confirm_path, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>