<p><%= flash[:notice] %></p>
<div class="container">
  <h1>ユーザ情報</h1>
  <div class="row justify-content-center">
    <%= form_with model: @user, url: user_path  do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="col-12">
        ニックネーム
      </div>
      <div class="col-12">
        <%= f.text_field :user_name %>
      </div>
      <div class="col-12">
        メールアドレス
      </div>
      <div class="col-12">
        <%= f.text_field :email %>
      </div>
      <div class="col-12">
        プロフィール画像
      </div>
      <div class="col-12">
        <%= f.file_field :profile_image %>
      </div>
      <div class="col-12">
        プロフィール
      </div>
      <div class="col-12">
        <%= f.text_area :self_introduction %>
      </div>
      <div class="row">
        <div class="col-6">
          <%= f.submit "更新", class: "btn btn-success" %>
        </div>
        <div class="col-6">
          <%= link_to "退会する", users_confirm_path, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>