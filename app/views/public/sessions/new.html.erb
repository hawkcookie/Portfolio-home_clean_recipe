<div class="container">
  <h2>ログイン</h2>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="row">
    <%= form_with model: User, url: user_session_path do |f| %>
      <div class="field">
        <%= f.label :email,"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :password,"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me,"保存する" %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <h4>会員登録がお済みでない方</h4>
    <div class=".col-md-4 offset-md-2">
     <%= link_to "こちら", new_user_registration_path %>から新規登録を行ってください。
    </div>
  </div>

</div>