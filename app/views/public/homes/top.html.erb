<div class="container">
  <h1>トップページ</h1>
    <div class="row">
      <% @posts.each do |post| %>
        <%= link_to post_path(post.id) do %>
          <span><%= image_tag post.post_image, size: "250×200" %></span>
        <% end %>
        <%= image_tag post.user.profile_image %>
        <% if post.user.user_name.present? %>
          <%= post.user.user_name %>
        <% else %>
          
        <% end %>
        <%= post.title %>
        <%= post.likes.count %>
        <% post.categories.each do |category| %>
          <%= category.category_name %>
        <% end %>
        <%= post.introduction %>
      <% end %>
    </div>
</div>

