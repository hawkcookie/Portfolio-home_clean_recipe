<div class="container">
  <h4>
    作成中投稿一覧
    <span class="num-items">全<%= @posts.count %>件</span>
  </h4>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th scope="col">タイトル</th>
          <th scope="col">更新日</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @draft_posts.each do |post| %>
          <tr class="rough-draft">
            <td class="title"><%= post.title %></td>
            <td class="date"><%= post.updated_at.strftime('%Y/%m/%d') %></td>
            <td class="edit-btn"><%= link_to "編集", post_path(post.id), class: "btn btn-success"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @draft_posts %>
    </div>
</div>