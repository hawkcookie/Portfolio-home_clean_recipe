<div class="container">
  <h1>投稿一覧</h1>
  <div class="row">
    <% @posts.each do |post| %>
      <%= link_to post.title, post_path(post.id) do %>
        <%= post.like %>
        <%= post.category %>
        <%= post.created_at %>
      <% end %>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>