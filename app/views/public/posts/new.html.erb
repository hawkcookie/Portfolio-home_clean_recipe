<div class="container">
  <h4>新規投稿</h4>
  <div class="row">
    <%= form_with model: @post,url: new_post_path do |f| %>
      <div class="row">
        <span>タイトル</span>
        <%= f.text_field :title %>
      </div>
      <div class="row">
        <span>トップ画像</span>
        <%= f.file_field :post_image,accept: "image/*" %>
      </div>
      <div class="row">
        <span>説明</span>
        <%= f.text_area :introduction %>
      </div>
      <div class="row">
        <span>カテゴリ</span>
        <%= f.text_field :category %>
      </div>
      <div class="row">
        <span>用意するもの</span>
        <div class="add-botton-box">
          <%= link_to_add_association "追加ボタン", f, :cleaning_tools,
            class: 'add_fields',
            id: 'add-btn',
            data: {
              association_insertion_node: '#detail-association-insertion-point',
              association_insertion_method: 'prepend'
              } 
          %>
        </div>
        <%= f.text_field :cleaning_tool %>
        <div id="detail-association-insertion-point"></div>
        
        <%= f.fields_for :cleaning_tools do |form| %>
          <%= render "cleaning_tool_fields", f: form %>
        <% end %>
        
      </div>
      <div class="row">
        <span>掃除方法</span>
        <%= f.file_field :recipe_image,accept: "image/*" %>
        
      </div>
      <div class="row">
        <%= f.text_area :cleaning_recipe, placeholder: "説明文" %>
      </div>
      <%= f.submit "投稿", class: "btn btn-success" %>
    <% end %>
  </div>
</div>