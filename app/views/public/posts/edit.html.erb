 <%= flash[:notice] %>
<div class="container">
  <h4>投稿編集</h4>
  <div class="row">
    <%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>
      <div class="row">
        <span>タイトル</span>
        <%= f.text_field :title %>
      </div>
      <div class="row">
        <span>トップ画像</span>
        <%= f.file_field :post_image,accept: "image/*" %>
      </div>
      <div class="row">
        <span>説明</span>
        <%= f.text_field :introduction %>
      </div>
      <div class="row">
        <span>カテゴリ</span>
        <div class="field">
          <%= collection_check_boxes(:post, :category_ids, Category.all, :id, :category_name ) do |t|  %>
            <% t.label { t.check_box + t.text } %>
          <% end %> 
        </div>
      </div>
      <div class="row">
        <span>用意するもの</span>
        <%= link_to_add_association "追加ボタン", f, :cleaning_tools, class: 'add_fields',
          data: {
            association_insertion_node: '#detail-association-insertion-point',
            association_insertion_method: 'after'
            }
        %>
        
        <div id="detail-association-insertion-point">
          <%= f.fields_for :cleaning_tools do |form| %>
            <%= render "cleaning_tool_fields", f: form %>
          <% end %>
        </div>
      </div>
      
      <div class="row">
        <span>掃除方法</span>
        <div class="add-botton-box">
          <%= link_to_add_association "追加ボタン", f, :cleaning_recipes, class: 'add_fields', id: 'add-btn',
            data: {
              association_insertion_node: '#detail-association-insertion-point2',
              association_insertion_method: 'append'
              } 
          %>
        </div>
        <%#= f.fields_for :recipe_image,accept: "image/*" %>
        <%#= f.fields_for :cleaning_recipe, placeholder: "説明文" %>
        <div id="detail-association-insertion-point2">
          <%= f.fields_for :cleaning_recipes do |form| %>
            <%= render "cleaning_recipe_fields", f: form %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <% if @post.is_publish == false %>
          <%= f.submit "上書き保存", :name => 'update_draft', class: "btn btn-primary" %>
          <%= f.submit "投稿", :name => 'chnge_publish', class: "btn btn-success" %>
        <% else @post.is_publish == true %>
          <%= f.submit "更新", :name => 'update_post', class: "btn btn-success" %>
        <% end %>
        <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>