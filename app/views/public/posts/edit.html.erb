<div class="container">
  <h4>投稿編集</h4>
  <div class="row">
    <%= form_with model: @post, url: post_path do |f| %>
      <div class="row">
        <span>タイトル</span>
        <%= f.text_field :title %>
      </div>
      <div class="row">
        <span>トップ画像</span>
        <%= f.file_field :post_image,accept: "image/*" %>
      </div>
      <div class="row">
        <span>説明</span>
        <%= f.text_field :introduction %>
      </div>
      <div class="row">
        <span>カテゴリ</span>
        <%= f.text_field :category %>
      </div>
      <div class="row">
        <span>用意するもの</span>
        <%= f.text_field :cleaning_tool %>
        <div id="detail-association-insertion-point"></div>
        <%= f.fields_for :creaning_tools do |f| %>
          <%= render "cleaning_tools_fields", f: form %>
        <% end %>
        
        <div class="add-botton-box">
          <%= link_to_add_association "追加ボタン", f, :cleaning_tools, class: 'add_fields', id: 'add-btn',
            data: {
              association_insertion_node: '#detail-association-insertion-point',
              association_insertion_method: 'after'
              }
          %>
        </div>
        
      </div>
      <div class="row">
        <span>掃除方法</span>
        <%= f.file_field :recipe_image,accept: "image/*" %>
        
      </div>
      <div class="row">
        <%= f.text_area :cleaning_recipe, placeholder: "説明文" %>
      </div>
      <%= link_to "削除", post_path(@post), method: :delete %>
      <%= f.submit "更新", class: "btn btn-success" %>
    <% end %>
  </div>
</div>